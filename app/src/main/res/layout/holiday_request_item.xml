<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/fromLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:textAllCaps="false"
        android:textColor="@color/gray_600"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fromValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/from"
        android:textColor="@color/gray_900"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/fromLabel"
        app:layout_constraintTop_toBottomOf="@+id/fromLabel" />

    <TextView
        android:id="@+id/toLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/to"
        android:textAllCaps="false"
        android:textColor="@color/gray_600"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fromValue"
        app:layout_constraintTop_toBottomOf="@+id/fromValue" />

    <TextView
        android:id="@+id/toValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/to"
        android:textColor="@color/gray_900"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/toLabel"
        app:layout_constraintTop_toBottomOf="@+id/toLabel" />

    <TextView
        android:id="@+id/requesterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/requested_by"
        android:textAllCaps="false"
        android:textColor="@color/gray_600"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/toValue"
        app:layout_constraintTop_toBottomOf="@+id/toValue" />

    <TextView
        android:id="@+id/requesterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/requested_by"
        android:textColor="@color/gray_900"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/requesterLabel"
        app:layout_constraintTop_toBottomOf="@+id/requesterLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>